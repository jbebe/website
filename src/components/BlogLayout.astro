---
import Layout from './Layout.astro';

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<style lang='scss'>
  @use 'include-media' as include;

  div {
    :global(img) {
      width: 100%;
    }
  }
</style>

<Layout title={title} description={description}>
  <div>
    <slot />
  </div>
</Layout>
