---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import TableOfContents from './TableOfContents.astro';
import PostDate from '@components/PostDate.astro';

type Props = {
  post: CollectionEntry<'articles'> | CollectionEntry<'projects'>;
};

const { post } = Astro.props;

const { headings } = await post.render();
const slug = `${post.collection}-${post.slug}`;
---

<style lang='scss'>
  @use 'include-media' as include;
  @use 'constants' as *;

  div {
    :global(img) {
      max-width: 100%;
      margin: 0 auto;
    }

    p {
      font-weight: 700;
      font-size: 80%;
      line-height: 80%;
      display: flex;
      margin: 0;
      margin-bottom: 20px;
      gap: 5px;
    }

    h1 > small {
      background-color: $border-color;
      border-radius: $border-size;
      font-size: 50%;
      padding: 1px 5px;
    }
  }
</style>

<Layout title={post.data.title} description={post.data.description}>
  <div>
    <h1>
      {post.data.title}
      {post.data.live ? '' : <small>Draft</small>}
    </h1>
    <p>
      <PostDate date={post.data.published} />
      {post.data.tags.map((x) => <span class='tag'>[{x}]</span>)}
    </p>
    <!-- enable if read time is longer <TableOfContents headings={headings} />
    <hr />-->
    <slot />
    <hr />
    <h1>Comments:</h1>
    <div id='disqus_thread'></div>
  </div>
  <script slot='third-party' is:inline define:vars={{ identifier: slug }} defer>
    var disqus_config = function () {
      this.page.url = `${location.origin}${location.pathname}`;
      this.page.identifier = identifier;
    };
    (function () {
      var d = document,
        s = d.createElement('script');
      s.src = 'https://balint-cloud.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  </script>
</Layout>
